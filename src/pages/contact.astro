---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Get In Touch | Contact Agri-Innovate">
    <h2 class="text-4xl font-bold text-gray-800 mb-8 border-b-4 border-emerald-500 inline-block pb-2">Get In Touch</h2>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Contact Info -->
        <div class="lg:col-span-1 space-y-6">
            <div class="bg-white p-6 rounded-xl shadow-lg">
                <h3 class="text-xl font-bold text-green-700 mb-2">Office Location</h3>
                <p class="text-gray-600">123 Farmstead Lane, Automation City, AG 90210</p>
                <p class="text-gray-600 mt-2">Open M-F, 9:00 AM - 5:00 PM</p>
            </div>
            <div class="bg-white p-6 rounded-xl shadow-lg">
                <h3 class="text-xl font-bold text-green-700 mb-2">Email & Phone</h3>
                <p class="text-gray-600">Sales: <a href="mailto:sales@hatatech.vn" class="text-blue-500 hover:text-blue-700">sales@hatatech.vn</a></p>
                <p class="text-gray-600">
                    Support: <a href="mailto:support@hatatech.vn" class="text-blue-500 hover:text-blue-700">support@hatatech.vn</a>
                </p>
                <p class="text-gray-600">Phone: (555) 123-4567</p>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-2 bg-white p-8 rounded-xl shadow-2xl">
            <form class="space-y-4">
                <h3 class="text-2xl font-semibold text-gray-800 mb-4">Send Us a Message</h3>
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-3 focus:ring-green-500 focus:border-green-500"
                    />
                </div>
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-3 focus:ring-green-500 focus:border-green-500"
                    />
                </div>
                <div>
                    <label for="machine" class="block text-sm font-medium text-gray-700">Inquiry Subject</label>
                    <select
                        id="machine"
                        name="machine"
                        class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-3 focus:ring-green-500 focus:border-green-500"
                    >
                        <option>General Inquiry</option>
                        <option>Automated Coconut Trimmer</option>
                        <option>Industrial Fruit Peeler</option>
                        <option>Autonomous Sprayer</option>
                        <option>Custom Solution Request</option>
                    </select>
                </div>
                <div>
                    <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                    <textarea
                        id="message"
                        name="message"
                        rows="4"
                        class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-3 focus:ring-green-500 focus:border-green-500"></textarea>
                </div>
                <button
                    type="submit"
                    class="w-full md:w-auto bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-lg shadow-md transition duration-200"
                >
                    Submit Inquiry
                </button>
            </form>
        </div>
    </div>
</Layout>
