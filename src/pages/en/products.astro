---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/config';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const getLocalizedPath = (path: string) => {
    if (lang === 'vi') return path;
    return `/${lang}${path}`;
};
---

<Layout title="Our Automated Tools | HaTaTech">
    <h2 class="text-4xl font-bold text-gray-800 mb-8 border-b-4 border-emerald-500 inline-block pb-2">{t('products.title')}</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Product Card 1: Coconut Trimming Machine -->
        <div class="bg-white rounded-xl shadow-xl overflow-hidden transform hover:scale-[1.02] transition duration-300">
            <img src="https://placehold.co/600x400/065F46/ffffff?text=Coconut+Trimmer" alt="Coconut Trimming Machine" class="w-full h-48 object-cover" />
            <div class="p-6">
                <h3 class="text-2xl font-semibold text-gray-800 mb-2">{t('products.coconut.title')}</h3>
                <p class="text-emerald-600 font-bold mb-4">{t('products.coconut.price')}</p>
                <p class="text-gray-600 mb-4">{t('products.coconut.desc')}</p>
                <button class="w-full bg-green-500 hover:bg-green-600 text-white font-medium py-2 rounded-lg transition duration-200">{t('products.button')}</button>
            </div>
        </div>

        <!-- Product Card 2: Fruit Peeling Machine -->
        <div class="bg-white rounded-xl shadow-xl overflow-hidden transform hover:scale-[1.02] transition duration-300">
            <img src="https://placehold.co/600x400/22C55E/ffffff?text=Fruit+Peeler" alt="Fruit Peeling Machine" class="w-full h-48 object-cover" />
            <div class="p-6">
                <h3 class="text-2xl font-semibold text-gray-800 mb-2">{t('products.fruit.title')}</h3>
                <p class="text-emerald-600 font-bold mb-4">{t('products.fruit.price')}</p>
                <p class="text-gray-600 mb-4">{t('products.fruit.desc')}</p>
                <button class="w-full bg-green-500 hover:bg-green-600 text-white font-medium py-2 rounded-lg transition duration-200">{t('products.button')}</button>
            </div>
        </div>

        <!-- Product Card 3: Pesticide Sprayer Machine -->
        <div class="bg-white rounded-xl shadow-xl overflow-hidden transform hover:scale-[1.02] transition duration-300">
            <img src="https://placehold.co/600x400/84CC16/ffffff?text=Pesticide+Sprayer" alt="Pesticide Sprayer Machine" class="w-full h-48 object-cover" />
            <div class="p-6">
                <h3 class="text-2xl font-semibold text-gray-800 mb-2">{t('products.sprayer.title')}</h3>
                <p class="text-emerald-600 font-bold mb-4">{t('products.sprayer.price')}</p>
                <p class="text-gray-600 mb-4">{t('products.sprayer.desc')}</p>
                <button class="w-full bg-green-500 hover:bg-green-600 text-white font-medium py-2 rounded-lg transition duration-200">{t('products.button')}</button>
            </div>
        </div>
    </div>

    <div class="mt-12 text-center p-6 bg-green-50 rounded-xl">
        <p class="text-xl text-gray-700 font-medium">
            {t('products.cta')} <a href={getLocalizedPath('/contact')} class="text-green-700 hover:text-green-900 underline">{t('products.contact')}</a>
        </p>
    </div>
</Layout>
