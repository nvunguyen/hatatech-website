---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/config';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="About HaTaTech | Our Mission & Story">
    <h2 class="text-4xl font-bold text-gray-800 mb-8 border-b-4 border-emerald-500 inline-block pb-2">{t('about.title')}</h2>

    <div class="bg-white p-8 rounded-xl shadow-xl space-y-8">
        <!-- Mission -->
        <div>
            <h3 class="text-2xl font-semibold text-green-700 mb-3">{t('about.mission.title')}</h3>
            <p class="text-gray-600 leading-relaxed">
                {t('about.mission.desc')}
            </p>
        </div>

        <!-- History/Vision -->
        <div class="grid md:grid-cols-2 gap-8 pt-4 border-t border-gray-100">
            <div>
                <h3 class="text-2xl font-semibold text-green-700 mb-3">{t('about.story.title')}</h3>
                <p class="text-gray-600">
                    {t('about.story.desc')}
                </p>
            </div>
            <div>
                <h3 class="text-2xl font-semibold text-green-700 mb-3">{t('about.sustainability.title')}</h3>
                <p class="text-gray-600">
                    {t('about.sustainability.desc')}
                </p>
            </div>
        </div>
    </div>
</Layout>
